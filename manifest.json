{
    "name": "Auto Coffee",
    "version": "2.0",
    "description": "You can enable auto-coffee function in planitpoker.com",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "assets/playing-cards.png",
            "38": "assets/playing-cards.png"
        },
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/content.js"
            ],
            "matches": [
                "https://www.planitpoker.com/*"
            ]
        }
    ]
}